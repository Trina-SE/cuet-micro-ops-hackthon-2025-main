# Server Configuration
NODE_ENV=development
PORT=3000

# S3 Configuration
# For self-hosted S3 (MinIO/RustFS), configure these:
S3_REGION=us-east-1
# When using Docker Compose the internal hostname is delineate-storage:9000
# Use http://localhost:9000 when running the API directly on your host
S3_ENDPOINT=http://delineate-storage:9000
S3_ACCESS_KEY_ID=delineate
S3_SECRET_ACCESS_KEY=delineate123
S3_BUCKET_NAME=downloads
S3_FORCE_PATH_STYLE=true

# Observability (optional)
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Rate Limiting
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (comma-separated origins or * for all)
CORS_ORIGINS=*

# Download Delay Simulation (for long-running download demo)
DOWNLOAD_DELAY_ENABLED=true
DOWNLOAD_DELAY_MIN_MS=10000
DOWNLOAD_DELAY_MAX_MS=200000
